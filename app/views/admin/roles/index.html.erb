<div class="card-panel">
  <div class="row">
    <h5 class="header2">
      Daftar Role User
    </h5>
    <div class="divider"></div>

    <div class="row">
      <div class="col s12 m12">
        <table class="bordered highlight responsive-table">
          <thead>
            <tr>
              <th>ID</th>
              <th>Role</th>
              <th></th>
            </tr>
          </thead>

          <tbody>
            <% @roles.each do |role| %>
              <tr>
                <td>
                  <%= role.id %>
                </td>
                <td>
                  <%= role.name %>
                </td>
                <td>
                  <% unless role.id == 1 %>
                    <%= link_to raw('<i class="small material-icons">edit</i>'), edit_admin_role_url(role) %>
                  <% end %>
                </td>
              </tr>
              <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>