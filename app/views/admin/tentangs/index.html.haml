.row
  .col.s12.m12
    .col.s12.m12
      .card-panel
        %h5.header2
          %a{:href => "#", :style => "padding: 0px 16px;"}
            %i.material-icons> camera_front
            INDEX PAGE TENTANG 
      .card-panel
        .row
          .col.m12.s12{:style => "padding:10px;"}
            = link_to raw('<i class="material-icons left">add_circle_outline</i> Tambah'), new_admin_tentang_path, class: 'right btn'
        .row
          .col.s12.m12
            %table.bordered.highlight.responsive-table
              %thead
                %tr
                  %th Judul
                  %th Konten
                  %th Gambar
                  %th
              %tbody
                - @tentangs.each do |tentang|
                  %tr
                    %td= tentang.judul
                    %td= truncate(strip_tags(tentang.konten), length: 100, omission: "...")
                    %td= image_tag(tentang.gambar.url, class:"materialboxed image_to_upload", width:"250")
                    %td
                      = link_to raw('<i class="small material-icons">edit</i>'), edit_admin_tentang_path(tentang)
                      = link_to raw('<i class="small material-icons">delete</i>'), admin_tentang_url(tentang), method: :delete, data: { confirm: 'Are you sure?' }