%ul#slide-out.side-nav
  %li
    .user-view
      .background
        = image_tag("office.jpg")
      %a{:href => "#!user"}
        %img.circle{:src => "https://dienmaycaohung.com/plugins/images/avatar/admin.png"}/
      - if user_signed_in?
        %a
          %span.white-text.name Hello,
        %a
          %span.white-text.email= current_user.email
      - else
        %a
          %span.white-text.name Welcome
  / li><a href="#!"><i class="material-icons">cloud</i>First Link With Icon</a></li
  = render 'layouts/menu'
  - if user_signed_in?
    %li
      .divider
    %li
      %a.subheader
        %i.material-icons> account_circle
        User Profile
    %li
      = link_to 'Hibah-ku', hibahs_url
    %li
      = link_to (t :profile), edit_user_registration_url
    %li
      = link_to (t :sign_out), destroy_user_session_url, data: {method: :delete}
  - else
    %li
      = link_to (t :sign_in), new_user_session_url
