.card-panel
  .row
    %h5.header2
      = @hibah.judul_kegiatan
    .divider
    .row
      .col.s12.m6
        %p
          = image_tag(@hibah.gambar.url, class:"materialboxed image_to_upload", width:"100%")
        .col.s12.m12
          = link_to raw('<i class="material-icons">file_download</i> Unduh Proposal'), @hibah.proposal_url, target: "_blank", class:"btn waves-effect waves-light center col s12 m12" if @hibah.proposal.present?
      .col.s12.m6
        %p
          %strong Nama:
          = @hibah.nama
        %p
          %strong Alamat:
          = @hibah.alamat
        %p
          %strong Judul kegiatan:
          = @hibah.judul_kegiatan
        %p
          %strong Latar belakang:
          = @hibah.latar_belakang
        %p
          %strong Maksud dan tujuan:
          = @hibah.maksud_dan_tujuan
        %p
          %strong Tahapan:
          = @hibah.status_hibah
        %p
          %strong Realisasi:
          = number_to_currency(@hibah.pertimbangans.last.realisasi, unit: "Rp. ", separator: ",", delimiter: ".")  if @hibah.pertimbangans.last.present?
    .divider
    .row
      %p{:style => "padding:30px;padding-top:20px;padding-bottom:0px;"}
        %strong Uraian Dana yang Diajukan:
      .row
        .col.s12.m12{:style => "padding:30px;padding-top:0px;"}
          %table.bordered.highlight.responsive-table
            %thead
              %tr
                %th No
                %th Deskripsi keperluan
                %th{:style => "text-align:right"} Jumlah Dana
            %tbody
              - numb = 1
              - @hibah.danas.each do |dana|
                %tr
                  %td= numb
                  %td= dana.deskripsi
                  %td{:style => "text-align:right"}= number_to_currency dana.jumlah, unit: "Rp. ", separator: ",", delimiter: "."
                - numb = numb+1
    .divider
    .row
      %p{:style => "padding:30px;padding-top:20px;padding-bottom:0px;"}
        %strong Uraian Proses yang berjalan :
      .row
        .col.m12.s12
          %ul.stepper.horizontal
            %li.step.active
              .step-title.waves-effect Seleksi
              .step-content
                .form-inputs
                  .col.m12.s12
                    .row
                      .input-field.col.s12.select.disposisi_status.m6
                        %h6 Status :
                        %pre.darken-3{style: "padding: 5px 10px; border-radius: 3px"}
                          = @hibah.seleksis.last.status_seleksi if @hibah.seleksis.last.present?
                        %hr
                      -#   = f.input :status, required: true, collection: [['Sesuai Persyaratan', 0], ['Tidak Sesuai Persyaratan', 1]], prompt: "-- Pilih Seleksi --", label: '', autofocus: true, wrapper_html: { class: 'm6' }
                    .row
                      .input-field.col.s12.text.required.seleksi_keterangan
                        %h6 Keterangan :
                        %pre.darken-3{style: "padding: 5px 10px; border-radius: 3px"}
                          = @hibah.seleksis.last.keterangan if @hibah.seleksis.last.present?
                        %hr
            %li.step
              .step-title.waves-effect Disposisi
              .step-content
                .form-inputs
                  .col.m12.s12
                    .row
                      .input-field.col.s12.select.disposisi_status.m6
                        %h6 Status :
                        %pre.darken-3{style: "padding: 5px 10px; border-radius: 3px"}
                          = @hibah.disposisis.last.status_disposisi if @hibah.disposisis.last.present?
                        %hr
                    -#   = f.input :status, required: true, collection: [['Sesuai Persyaratan', 0], ['Tidak Sesuai Persyaratan', 1]], prompt: "-- Pilih Seleksi --", label: '', autofocus: true, wrapper_html: { class: 'm6' }
                    .row
                      .input-field.col.s12.text.required.seleksi_keterangan
                        %h6 Keterangan :
                        %pre.darken-3{style: "padding: 5px 10px; border-radius: 3px"}
                          = @hibah.disposisis.last.keterangan if @hibah.disposisis.last.present?
                        %hr

            %li.step
              .step-title.waves-effect Distribusi
              .step-content
                .form-inputs
                  .col.m12.s12
                    .row
                      .input-field.col.s12.select.disposisi_status.m6
                        %h6 Dinas yang dipilh :
                        %pre.darken-3{style: "padding: 5px 10px; border-radius: 3px"}
                          = @hibah.distribusis.last.dina.name if @hibah.distribusis.last.present?
                        %hr
                    -#   = f.input :status, required: true, collection: [['Sesuai Persyaratan', 0], ['Tidak Sesuai Persyaratan', 1]], prompt: "-- Pilih Seleksi --", label: '', autofocus: true, wrapper_html: { class: 'm6' }
                    .row
                      .input-field.col.s12.text.required.seleksi_keterangan
                        %h6 Keterangan :
                        %pre.darken-3{style: "padding: 5px 10px; border-radius: 3px"}
                          = @hibah.distribusis.last.keterangan if @hibah.distribusis.last.present?
                        %hr

            %li.step
              .step-title.waves-effect Evaluasi
              .step-content
                .form-inputs
                  .col.m12.s12
                    .row
                      .input-field.col.s12.text.required.seleksi_keterangan
                        %h6 Keterangan :
                        %pre.darken-3{style: "padding: 5px 10px; border-radius: 3px"}
                          = @hibah.evaluasis.last.keterangan if @hibah.distribusis.last.present?
                        %hr
                            
            %li.step
              .step-title.waves-effect Pertimbangan
              .step-content
                .form-inputs
                  .col.m12.s12
                    .row
                      .input-field.col.s12.select.disposisi_status.m6
                        %h6 Status Pertimbangan :
                        %pre.darken-3{style: "padding: 5px 10px; border-radius: 3px"}
                          = @hibah.pertimbangans.last.status_pertimbangan if @hibah.pertimbangans.last.present?
                        %hr
                    .row
                      .input-field.col.s12.select.disposisi_status.m6
                        %h6 Realisasi :
                        %pre.darken-3{style: "padding: 5px 10px; border-radius: 3px"}
                          = number_to_currency(@hibah.pertimbangans.last.realisasi, unit: "Rp. ", separator: ",", delimiter: ".") if @hibah.pertimbangans.last.present?
                        %hr
                    .row
                      .input-field.col.s12.text.required.seleksi_keterangan
                        %h6 Keterangan :
                        %pre.darken-3{style: "padding: 5px 10px; border-radius: 3px"}
                          = @hibah.pertimbangans.last.keterangan if @hibah.pertimbangans.last.present?
                        %hr
                              

                %li.step
                  .step-title.waves-effect Penetapan
                  .step-content
                    .form-inputs
                      .row
                        .input-field.col.s12.select.disposisi_status.m6
                          %h6 Tanggal Ditetapkan :
                          %pre.darken-3{style: "padding: 5px 10px; border-radius: 3px"}
                            = @hibah.penetapans.last.tgl_ketetapan if @hibah.penetapans.last.present?
                          %hr
      
  .row
    .col.s12.m12
      .right{:style => "padding:20px;"}
        = link_to 'Edit', edit_hibah_path(@hibah), class:"btn waves-effect waves-light right" if current_user.role_id == 1 or current_user.role_id == 2 or @hibah.user_id == current_user.id
      .right{:style => "padding:20px;"}
        = link_to 'Back', hibahs_path, class:"btn waves-effect waves-light right"
