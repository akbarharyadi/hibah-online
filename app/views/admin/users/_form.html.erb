<%= simple_form_for(@user, url: (@user.new_record? ? admin_users_path(@user) : admin_user_path(@user))) do |f| %>
  <!-- <%= f.error_notification %> -->
  <div class="card-panel">
    <div class="row">
      <div class="form-inputs">
        <div class="col m12 s12">
          <div class="row">
            <%= f.input :email, required: true, autofocus: true, wrapper_html: { class: 'm6' } %>
          </div>
          <% if @user.new_record? %>
            <div class="row">
              <%= f.input :password, required: true, autofocus: true, wrapper_html: { class: 'm6' } %>
              <%= f.input :password_confirmation, required: true, autofocus: true, wrapper_html: { class: 'm6' } %>
            </div>
          <% end %>
          <div class="row">
            <%= f.input :role_id, collection: Role.where('id != 1').all, prompt: " --- Pilih Role --- ", required: true, wrapper_html: { class: 'm6' } %>
            <%= f.input :dina_id, collection: Dina.all, prompt: " --- Pilih Dinas --- ", wrapper_html: { class: 'm6' } %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="col m12">
    <div class="right" style="padding:20px;">
      <button class="btn cyan waves-effect waves-light right" type="submit">
        SIMPAN USER
        <i class="material-icons right">send</i>
      </button>
    </div>
    <div class="right" style="padding:20px;">
      <%= link_to 'Back', admin_users_path, class:"btn cyan waves-effect waves-light right" %>
    </div>
  </div>
  <% end %>