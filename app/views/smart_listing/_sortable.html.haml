= link_to url, :class => container_classes, :data => {:attr => attribute}, :remote => true do
  = title
  - if order
    %span{:class => "#{order == "asc" ? SmartListing.config.classes(:icon_sort_up) : SmartListing.config.classes(:icon_sort_down)}"}
  - else
    %span{:class => "#{SmartListing.config.classes(:icon_sort_none)}"}
