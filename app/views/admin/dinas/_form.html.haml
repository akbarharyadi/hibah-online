= simple_form_for(@dinas, url: (@dinas.new_record? ? admin_dinas_path(@dinas) : admin_dina_path(@dinas)), defaults: { label_html: { class: (@dinas.new_record? ? '' : 'active') } }) do |f|
  / <haml_loud> f.error_notification </haml_loud>
  .card-panel
    .row
      .form-inputs
        .col.m12.s12
          .row
            = f.input :code, required: true, label: 'Kode', autofocus: true, wrapper_html: { class: 'm6' }
            = f.input :name, required: true, label: 'Nama', autofocus: true, wrapper_html: { class: 'm6' }
          .row
            = f.input :address, label: 'Alamat', required: true
  .col.m12
    .right{:style => "padding:20px;"}
      %button.btn.cyan.waves-effect.waves-light.right{:type => "submit"}
        SIMPAN DINAS
        %i.material-icons.right send
    .right{:style => "padding:20px;"}
      = link_to 'Back', admin_dinas_path, class:"btn cyan waves-effect waves-light right"
