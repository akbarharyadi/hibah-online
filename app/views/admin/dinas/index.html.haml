.block-header
  %h2.header2
    %a{:href => "#", :style => "padding: 0px 16px;"}
      %i.material-icons> verified_user
      HALAMAN INDEX DINAS
.row.clearfix
  .col-lg-12.col-md-12.col-sm-12.col-xs-12
    .card
      .header
        Tabel Data
        %span.red-text Dinas
      .body
        .row
          .col-lg-12.col-md-12.col-sm-12.col-xs-12{:style => "padding:10px;"}
            = link_to raw('<i class="material-icons left">add_circle_outline</i> Tambah Dinas'), new_admin_dina_path, class: 'right btn'
        .row
          .col-lg-12.col-md-12.col-sm-12.col-xs-12
            %table.bordered.highlight.responsive-table.table-bordered
              %thead
                %tr
                  %th Kode
                  %th Nama
                  %th
              %tbody
                - @dinas.each do |dina|
                  %tr
                    %td{:style => "width:10%;"}
                      = dina.code
                    %td
                      = dina.name
                    %td{:style => "width:10%;"}
                      = link_to raw('<i class="small material-icons">edit</i>'), edit_admin_dina_url(dina)
                      = link_to raw('<i class="small material-icons">delete</i>'), admin_dina_url(dina), method: :delete, data: { confirm: 'Are you sure?' }
