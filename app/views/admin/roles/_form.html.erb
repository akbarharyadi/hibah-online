<%= simple_form_for(@role, url: admin_role_path(@role)) do |f| %>
  <!-- <%= f.error_notification %> -->
  <div class="card-panel">
    <div class="row">
      <div class="form-inputs">
        <div class="col m12 s12">
          <div class="row">
            <%= f.input :name, required: true, autofocus: true, wrapper_html: { class: 'm6' } %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="col m12">
    <div class="right" style="padding:20px;">
      <button class="btn cyan waves-effect waves-light right" type="submit">
        SIMPAN ROLE
        <i class="material-icons right">send</i>
      </button>
    </div>
    <div class="right" style="padding:20px;">
      <%= link_to 'Back', admin_roles_path, class:"btn cyan waves-effect waves-light right" %>
    </div>
  </div>
<% end %>